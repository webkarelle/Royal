<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutSubCategory">

        <TextView
            android:id="@+id/tvNameSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:text="Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTypeSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Type"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvPriceSubCategory"
            android:layout_toEndOf="@+id/tvPriceSubCategory" />

        <TextView
            android:id="@+id/tvPriceSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Price"
            android:textSize="20sp"
            android:layout_alignBottom="@+id/tvTypeSubCategory"
            android:layout_toRightOf="@+id/tvNameSubCategory"
            android:layout_toEndOf="@+id/tvNameSubCategory" />

        <TextView
            android:id="@+id/tvImageSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Image"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvTypeSubCategory"
            android:layout_toEndOf="@+id/tvTypeSubCategory" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivDeleteSubCategory"
            android:src="@drawable/ic_delete_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>