<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karelle.env.royal.controlers.OrdersActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="ADD a new Order"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/etIdCust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:hint="IdCust"
        android:padding="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPriceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etIdCust"
        android:hint="Price"
        android:padding="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etStatutOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etPriceOrder"
        android:hint="Statut"
        android:padding="5dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDateOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_below="@+id/etStatutOrder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnSaveOrUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="265dp"
        android:onClick="saveOrder"
        android:text="SAVE" />


</RelativeLayout>