<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karelle.env.royal.SubODActivity">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor= "#e0f47975"
        android:elevation="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layoutCart"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="od"
                android:padding="5dp"
                android:id="@+id/tvNumCartDetail"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvNumCartOrder"
                android:layout_toEndOf="@+id/tvNumCartOrder" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="5dp"
                android:text="Pizza"
                android:gravity="center_horizontal"
                android:id="@+id/tvTypeCartDetail"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/tvNumCartDetail"
                android:layout_toEndOf="@+id/tvNumCartDetail" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:id="@+id/tvSOD1"
                android:text="sod1" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="5dp"
                android:text="15sh"
                android:id="@+id/tvPriceCartDetail"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewSubOD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/sod_item">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>
