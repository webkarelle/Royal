<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="karelle.env.royal.LocateActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ivLocate"
        android:src="@drawable/locatelogo"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="The Location"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ivLocate"
        android:layout_toEndOf="@+id/ivLocate" />
</RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cvStores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="5dp"
        android:padding="5dp"
        app:cardBackgroundColor="#e0f47975">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvStores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Stores "
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivStore1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/iconestore" />

            <TextView
                android:id="@+id/tvAddStore1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addr store1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivStore2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/iconestore" />

            <TextView
                android:id="@+id/tvAddStore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="addresse Store 2 " />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cvDeliveryAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="5dp"
            android:padding="5dp"
            app:cardBackgroundColor="#e0f57343">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeliveryAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Delivery Address "
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHomeDelivery"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/iconelivraisonhome" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="124dp">


            <TextView
                android:id="@+id/tvAddHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/ivChange"
                android:text="addresse home delivery " />

            <ImageView
                android:id="@+id/ivChange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:src="@drawable/iconchange" />

            <EditText
                android:id="@+id/etNewAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:layout_below="@+id/ivChange"
                android:layout_toLeftOf="@+id/ivChange"
                android:layout_toStartOf="@+id/ivChange"
                android:ems="10"
                android:inputType="textMultiLine" />

            <ImageView
                android:id="@+id/ivValideAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/ivChange"
                android:src="@drawable/iconevalideadd" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackToHome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/ivBackToHome"
            android:layout_toStartOf="@+id/ivBackToHome"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:text="Back To Home  "
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
    </RelativeLayout>

</LinearLayout>
